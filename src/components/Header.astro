---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import ThemeSwitcher from './ThemeSwitcher.astro';
import Search from './Search.vue';

interface Props {
    path?: string;
    item?: string;
}

const { path, item }: Props = Astro.props;
---

<header>
	<div class="container-box pt-10">
		<div class="relative flex">
            <div class="flex-1 text-center">
                <div class="text-6xl"><a href={ Astro.site }>{ SITE_TITLE }</a></div>
                <div class="mt-5">{ SITE_DESCRIPTION }</div>
            </div>
            <div class="absolute right-0 h-16 flex items-center">
                <ThemeSwitcher />
            </div>
        </div>
        <Search path={ path } item={ item } client:only="vue" />
	</div>
</header>
