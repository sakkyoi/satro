---
/**
 * link-out icon and target="_blank" for external linnk.
 */
const props = Astro.props;

const isExternal = new URL(props.href, Astro.site).hostname !== new URL(Astro.site!).hostname;
---

<a {...props} target={ isExternal ? "_blank" : "" }>
    <slot />
    {
        isExternal ? <iconify-icon icon="akar-icons:link-out" class="ml-1">hello</iconify-icon> : null
    }
</a>
